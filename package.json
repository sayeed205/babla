{
  "name": "babla",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "license": "MIT",
  "scripts": {
    "start": "node bin/server.js",
    "build": "node ace build",
    "dev": "node ace serve --hmr",
    "test": "node ace test",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "imports": {
    "#controllers/*": "./app/controllers/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#models/*": "./app/models/*.js",
    "#mails/*": "./app/mails/*.js",
    "#services/*": "./app/services/*.js",
    "#listeners/*": "./app/listeners/*.js",
    "#events/*": "./app/events/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#validators/*": "./app/validators/*.js",
    "#providers/*": "./providers/*.js",
    "#policies/*": "./app/policies/*.js",
    "#abilities/*": "./app/abilities/*.js",
    "#types/*": "./app/types/*.js",
    "#utils/*": "./app/utils/*.js",
    "#database/*": "./database/*.js",
    "#start/*": "./start/*.js",
    "#tests/*": "./tests/*.js",
    "#config/*": "./config/*.js"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/eslint-config": "^2.1.0",
    "@adonisjs/prettier-config": "^1.4.5",
    "@adonisjs/tsconfig": "^1.4.1",
    "@japa/api-client": "^3.1.0",
    "@japa/assert": "^4.1.1",
    "@japa/plugin-adonisjs": "^4.0.0",
    "@japa/runner": "^4.3.0",
    "@swc/core": "1.13.3",
    "@types/luxon": "^3.7.1",
    "@types/node": "^22.15.18",
    "eslint": "^9.32.0",
    "hot-hook": "^0.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.2",
    "ts-node-maintained": "^10.9.6",
    "typescript": "~5.9"
  },
  "dependencies": {
    "@adonisjs/auth": "^9.4.2",
    "@adonisjs/core": "^6.19.0",
    "@adonisjs/cors": "^2.2.1",
    "@adonisjs/lucid": "^21.8.0",
    "@hitarashi/trakt": "npm:@jsr/hitarashi__trakt@^0.1.4",
    "@mtcute/dispatcher": "^0.25.7",
    "@mtcute/node": "^0.25.7",
    "@vinejs/vine": "^3.0.1",
    "luxon": "^3.7.1",
    "mediainfo.js": "^0.3.5",
    "meilisearch": "^0.51.0",
    "mime": "^4.0.7",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "tmdb-ts": "^2.0.1"
  },
  "hotHook": {
    "boundaries": [
      "./app/controllers/**/*.ts",
      "./app/middleware/*.ts"
    ]
  },
  "prettier": "@adonisjs/prettier-config",
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write ."
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write ."
    ]
  }
}
